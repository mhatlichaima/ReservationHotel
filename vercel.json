{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "chunkSizeWarningLimit": 1000
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/package.json"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}